{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "outDir": "./dist/",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": ["./types", "./node_modules/@types"],
    "allowSyntheticDefaultImports": true
  }
}
